<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Status Indicator -->
    <View
        android:id="@+id/statusIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/status_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/messageTime"
        app:layout_constraintBottom_toBottomOf="@id/messageTime" />

    <!-- Message Time -->
    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Dec 09, 14:30:25"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/header_text"
        app:layout_constraintStart_toEndOf="@id/statusIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:text="Sent Successfully"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/status_ready"
        app:layout_constraintStart_toEndOf="@id/statusIndicator"
        app:layout_constraintTop_toBottomOf="@id/messageTime" />

    <!-- Method Badge -->
    <TextView
        android:id="@+id/methodBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Internet"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:background="@drawable/method_badge_background"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/messageTime" />

    <!-- Details Text -->
    <TextView
        android:id="@+id/detailsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Sent to dashboard successfully"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toEndOf="@id/statusIndicator"
        app:layout_constraintEnd_toStartOf="@id/methodBadge"
        app:layout_constraintTop_toBottomOf="@id/statusText" />

    <!-- Retry Count (only visible if retries > 0) -->
    <TextView
        android:id="@+id/retryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:text="Retries: 2"
        android:textSize="10sp"
        android:textColor="@color/status_warning"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/statusIndicator"
        app:layout_constraintTop_toBottomOf="@id/detailsText" />

</androidx.constraintlayout.widget.ConstraintLayout>
